<?xml version="1.0" encoding="utf-8"?>
<s:TabbedViewNavigatorApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
								  xmlns:s="library://ns.adobe.com/flex/spark"
								  applicationComplete="applicationCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import com.shillaker.home.HomeView;
			import com.shillaker.nativeapps.NativeAppsView;
			import com.shillaker.other.OtherThingsView;
			
			protected function applicationCompleteHandler(event:FlexEvent):void
			{
				stage.displayState = StageDisplayState.FULL_SCREEN_INTERACTIVE;				
			}
			
		]]>
	</fx:Script>
	
	<fx:Style source="ExploreAirMobileStyles.css" />
	
	<s:ViewNavigator label="Home" id="home" firstView="{HomeView}" width="100%" height="100%" 
						 hide="home.popToFirstView()"/>
		
	<s:ViewNavigator label="Native Apps" id="nativeApps" firstView="{NativeAppsView}" width="100%" height="100%"
						 hide="nativeApps.popToFirstView()"/>
		
	<s:ViewNavigator label="Other Things" id="otherThings" firstView="{OtherThingsView}" width="100%" height="100%" 
						 hide="otherThings.popToFirstView()"/>

</s:TabbedViewNavigatorApplication>
