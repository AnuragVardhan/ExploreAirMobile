<?xml version="1.0" encoding="utf-8"?>
<s:TabbedViewNavigatorApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
								  xmlns:s="library://ns.adobe.com/flex/spark"
								  applicationComplete="applicationCompleteHandler(event)"
								  splashScreenImage="@Embed('assets/SplashImage.png')">
	
	<fx:Metadata>
		[ResourceBundle("explore_air_mobile")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import com.simonshillaker.explore.home.HomeView;
			import com.simonshillaker.explore.phoneintegration.PhoneIntegrationView;
			
			import mx.events.FlexEvent;
			
			protected function applicationCompleteHandler(event:FlexEvent):void
			{
			}
			
		]]>
	</fx:Script>
	
	<fx:Style source="ExploreAirMobileStyles.css" />
	
	<s:ViewNavigator label="{resourceManager.getString('explore_air_mobile', 'home_title')}" 
					 id="homeTab" firstView="{HomeView}" width="100%" height="100%"
						 hide="homeTab.popToFirstView()"/>
		
	<s:ViewNavigator label="{resourceManager.getString('explore_air_mobile', 'phone_integration_title')}" 
					 id="integrationTab" firstView="{PhoneIntegrationView}" width="100%" height="100%" 
						 hide="integrationTab.popToFirstView()"/>
		
</s:TabbedViewNavigatorApplication>
