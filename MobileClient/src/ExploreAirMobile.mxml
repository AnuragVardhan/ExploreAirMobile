<?xml version="1.0" encoding="utf-8"?>
<s:TabbedViewNavigatorApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
								  xmlns:s="library://ns.adobe.com/flex/spark" width="100%" height="100%">
	<fx:Script>
		<![CDATA[
			import view.desktop.DesktopIntegrationView;
			import view.features.FeaturesView;
			import view.home.HomeView;
			import view.web.WebView;
		]]>
	</fx:Script>
	
	<s:TabbedViewNavigator width="100%" height="100%">
		
		<s:ViewNavigator label="Home" id="home" firstView="{HomeView}" width="100%" height="100%"/>
		
		<s:ViewNavigator label="Features" id="features" firstView="{FeaturesView}" width="100%" height="100%"/>
		
		<s:ViewNavigator label="Web" id="web" firstView="{WebView}" width="100%" height="100%"/>
		
		<s:ViewNavigator label="Desktop" id="desktop" firstView="{DesktopIntegrationView}" width="100%" height="100%" />
	</s:TabbedViewNavigator>
	
</s:TabbedViewNavigatorApplication>
