<?xml version="1.0" encoding="utf-8"?>
<s:TabbedViewNavigatorApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
								  xmlns:s="library://ns.adobe.com/flex/spark"
								  applicationComplete="applicationCompleteHandler(event)">
	
	<fx:Metadata>
		[ResourceBundle("explore_air_mobile")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import com.simonshillaker.explore.tab1.HomeView;
			import com.simonshillaker.explore.tab2.NativeAppsView;
			import com.simonshillaker.explore.tab3.OtherThingsView;
			
			protected function applicationCompleteHandler(event:FlexEvent):void
			{
				stage.displayState = StageDisplayState.FULL_SCREEN_INTERACTIVE;				
			}
			
		]]>
	</fx:Script>
	
	<fx:Style source="ExploreAirMobileStyles.css" />
	
	<s:ViewNavigator label="{resourceManager.getString('explore_air_mobile', 'tab_1_title')}" 
					 id="tab1" firstView="{HomeView}" width="100%" height="100%" 
						 hide="tab1.popToFirstView()"/>
		
	<s:ViewNavigator label="{resourceManager.getString('explore_air_mobile', 'tab_2_title')}" 
					 id="tab2" firstView="{NativeAppsView}" width="100%" height="100%"
						 hide="tab2.popToFirstView()"/>
		
	<s:ViewNavigator label="{resourceManager.getString('explore_air_mobile', 'tab_3_title')}" 
					 id="tab3" firstView="{OtherThingsView}" width="100%" height="100%" 
						 hide="tab3.popToFirstView()"/>

</s:TabbedViewNavigatorApplication>
