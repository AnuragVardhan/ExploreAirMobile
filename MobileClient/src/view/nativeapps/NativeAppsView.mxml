<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="Native Apps">
	
	<fx:Script>
		<![CDATA[
			import flash.net.navigateToURL;
			
			import view.camera.CameraView;
			import view.maps.MapsView;
			import view.web.WebView;
			
			protected function webButton_clickHandler(event:MouseEvent):void
			{
				navigator.pushView(WebView);				
			}
			
			protected function mapsButton_clickHandler(event:MouseEvent):void
			{
				navigator.pushView(MapsView);				
			}
			
			protected function cameraButton_clickHandler(event:MouseEvent):void
			{
				navigator.pushView(CameraView);				
			}
			
			protected function emailButton_clickHandler(event:MouseEvent):void
			{
				navigateToURL(new URLRequest("mailto:simon.shillaker@ubs.com?subject=Test\%20Subject&body=Test\%20Body"));				
			}
			
			protected function phoneButton_clickHandler(event:MouseEvent):void
			{
				navigateToURL(new URLRequest('tel:123456789'));
			}
			
			protected function smsButton_clickHandler(event:MouseEvent):void
			{
				navigateToURL(new URLRequest('sms:1234567890'));
			}
		]]>
	</fx:Script>
	
	<s:navigationContent>
		<s:Button id="backButton" label="&lt;-" 
				  visible="{navigator.length > 1}" includeInLayout="{navigator.length > 1}" 
				  click="navigator.popView()"/>
	</s:navigationContent>
	
	<s:layout>
		<s:VerticalLayout horizontalAlign="center" verticalAlign="middle" />
	</s:layout>
	
	<s:Button id="webButton" label="Web" click="webButton_clickHandler(event)" />
	<s:Button id="mapsButton" label="Maps" click="mapsButton_clickHandler(event)" />
	<s:Button id="cameraButton" label="Camera" click="cameraButton_clickHandler(event)" />
	<s:Button id="emailButton" label="Email" click="emailButton_clickHandler(event)" />
	<s:Button id="phoneButton" label="Phone" click="phoneButton_clickHandler(event)"/>
	<s:Button id="smsButton" label="SMS" click="smsButton_clickHandler(event)"/>
</s:View>
