<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="CameraUIView"
		creationComplete="init()" xmlns:mx="library://ns.adobe.com/flex/mx">

	<fx:Script>
		<![CDATA[
			
			[Bindable]
			private var cameraSupported:Boolean = true;
			
			private var camera:Camera;
			private var video:Video;
			
			private function init():void
			{
				if(Camera.isSupported)
				{
					cameraSupported = true;
					video = new Video(videoHolder.width, videoHolder.height);
					videoHolder.addChild(video);
					
					camera = Camera.getCamera();
					camera.setMode(videoHolder.width, videoHolder.height, 10);
					
					video.attachCamera(camera);
				}
				else
				{
					cameraSupported = false;
				}
			}
			
		]]>
	</fx:Script>
	
	<s:navigationContent>
		<s:Button id="backButton" label="&lt;-" 
				  visible="{navigator.length > 1}" includeInLayout="{navigator.length > 1}" 
				  click="navigator.popView()"/>
	</s:navigationContent>
	
	<s:layout>
		<s:VerticalLayout />
	</s:layout>
		
		<s:Label id="infoLabel" text="Camera not supported." includeInLayout="{!cameraSupported}" visible="{!cameraSupported}"/>
		
		<mx:UIComponent id="videoHolder" width="100%" height="100%" includeInLayout="{cameraSupported}" visible="{cameraSupported}"/>
		
</s:View>
