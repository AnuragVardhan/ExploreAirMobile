<?xml version="1.0" encoding="utf-8"?>
<core:VerticalCenteredViewWithBackButton xmlns:core="com.simonshillaker.explore.core.*"
		xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		creationComplete="initialise(event)" 
		remove="removeHandler(event)" resize="fitViewToScreen()"
		title="{resourceManager.getString('explore_air_mobile', 'internal_browser_title')}">
	
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import spark.events.ViewNavigatorEvent;
			
			public var webView:StageWebView;
			
			private function fitViewToScreen():void{
				
				if(webView)
				{
					webView.viewPort = new Rectangle(0, stage.height - height, width, height);
				}
			}
			
			protected function removeHandler(event:FlexEvent):void
			{
				webView.dispose();
			}
			
			private function initialise(event:FlexEvent):void 
			{
				webView = new StageWebView();
				
				fitViewToScreen();
				
				webView.stage = stage;
				
				webView.loadURL("http://www.bbc.co.uk/news");
				
				webView.addEventListener(ErrorEvent.ERROR, handleWebError);
				
				webView.addEventListener(Event.COMPLETE, handleWebSuccess);
			}
			
			private function handleWebError(event:ErrorEvent):void
			{
				errorLabel.visible = true;
			}
			
			private function handleWebSuccess(event:Event):void
			{
				errorLabel.visible = false;
			}
			
			protected function goToUrl():void
			{
				if(webView)
				{
					errorLabel.visible = false;
					webView.loadURL(urlInput.text);
				}
			}
			
		]]>
	</fx:Script>
	
	<core:titleContent>
		<s:Group width="100%" height="100%">
			<s:TextInput id="urlInput" left="2" right="{5 + goToURLButton.width}"
						 prompt="Enter a URL" enter="goToUrl()"/>
			<s:Button id="goToURLButton" right="2" label="Go"
					  click="goToUrl()"/>
		</s:Group>
	</core:titleContent>
	
	<s:Label id="errorLabel" visible="false" text="Invalid URL"/>
</core:VerticalCenteredViewWithBackButton>
