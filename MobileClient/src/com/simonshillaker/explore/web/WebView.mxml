<?xml version="1.0" encoding="utf-8"?>
<core:VerticalCenteredViewWithBackButton xmlns:core="com.simonshillaker.explore.core.*"
		xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		title="{resourceManager.getString('explore_air_mobile', 'web_title')}">
	
	<fx:Script>
		<![CDATA[
			import flash.net.navigateToURL;
			
			private function goToNativeWebBrowser():void {
				var url:String = resourceManager.getString('explore_air_mobile', 'web_default_url');
				
				navigateToURL(new URLRequest(url));
			}
		]]>
	</fx:Script>
	
	
	<s:Button label="{resourceManager.getString('explore_air_mobile', 'internal_browser_title')}" 
			  id="embeddedBrowserButton" 
			  width="100%" 
			  click="navigator.pushView(InternalBrowser)" />

	<s:Button label="{resourceManager.getString('explore_air_mobile', 'native_browser_title')}" 
			  id="nativeBrowserButton" 
			  width="100%" 
			  click="goToNativeWebBrowser()" />

</core:VerticalCenteredViewWithBackButton>
	