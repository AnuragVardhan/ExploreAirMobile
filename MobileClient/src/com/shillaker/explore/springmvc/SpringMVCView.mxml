<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="SpringMVCView">
	
	<fx:Script>
		<![CDATA[
			protected function getUserButton_clickHandler(event:MouseEvent):void
			{
				navigator.pushView(GetUserView);
			}
			
			protected function addUserButton_clickHandler(event:MouseEvent):void
			{
				navigator.pushView(AddUserView);				
			}
			
		]]>
	</fx:Script>
	
	<s:layout>
		<s:VerticalLayout horizontalAlign="center" verticalAlign="middle" />
	</s:layout>
	
	<s:Button id="getUserButton" label="Get User" click="getUserButton_clickHandler(event)" />
	<s:Button id="addUserButton" label="Add User" click="addUserButton_clickHandler(event)" />
	
</s:View>
